  <build>
    <finalName>website-platform</finalName>
    <!-- Package as an executable JAR -->  
    <plugins>  
        <!-- plugin>  
            <groupId>org.springframework.boot</groupId>  
            <artifactId>spring-boot-maven-plugin</artifactId>  
            <configuration>
				<mainClass>${start-class}</mainClass>
